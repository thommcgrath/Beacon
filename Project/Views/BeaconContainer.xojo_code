	#tag EndProperty

	#tag ComputedProperty, Flags = &h0
		#tag Getter
			Get
			  Return Self.mModified
			End Get
		#tag EndGetter
		#tag Setter
			Set
			  Self.mModified = Value
			  
			  RaiseEvent ContentsChanged
			End Set
		#tag EndSetter
		Modified As Boolean
	#tag EndComputedProperty



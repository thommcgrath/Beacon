	#tag Event
		Sub ResizerDragged(DeltaX As Integer, DeltaY As Integer)
		  #Pragma Unused DeltaX
		  
		  Dim NewSize As Integer = Self.Height - DeltaY
		  RaiseEvent ShouldResize(NewSize)
		End Sub
	#tag EndEvent
	#tag Event
		Sub ResizeFinished()
		  RaiseEvent ResizeFinished()
		End Sub
	#tag EndEvent
	#tag Event

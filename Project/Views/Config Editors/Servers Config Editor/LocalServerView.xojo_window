	#tag Event
		Sub Open()
		  Me.Profile = Self.mProfile
		End Sub
	#tag EndEvent
	#tag Event
		Sub ContentsChanged()
		  Self.Changed = Me.Changed
		End Sub
	#tag EndEvent
	#tag Event
		Function GetDocument() As Beacon.Document
		  Return Self.mDocument
		End Function
	#tag EndEvent
